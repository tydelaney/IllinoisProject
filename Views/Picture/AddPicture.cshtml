@model IllinoisProject.Models.Picture
<h3>Add a Picture </h3>

<form asp-controller="Picture" asp-action="AddPicture" method="post" enctype="multipart/form-data" class="form-horizontal">
	<div class="form-group">
		<label asp-for="AltAttribute"
		class="control-label col-xs-2">
	alt attribute:</label>
	<div class="col-xs-10">
		<input asp-for="AltAttribute" class="form-control"  />
	</div>
	</div>

	<div class="form-group">
		<label asp-for="MyPicture"
			   class="control-label col-xs-2">
			select a file to upload:
		</label>
		<div class="col-xs-10">
			<input type="file" name="MyPicture" class="file" />
		</div>
	</div>

	<div class="form-group">
		<div class="col-xs-offset-2 col-xs-10">
			<button type="submit" class="btn btn-primary">
				AddPicture
			</button>
		</div>
	</div>




</form>