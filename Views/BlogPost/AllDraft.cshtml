@model IEnumerable<IllinoisProject.Models.BlogPost>
<link rel="stylesheet" href="~/css/site.css" />
<nav class="navbar">
    <div class="navbar-links">
        <div class="navbar-left">
            <a asp-controller="BlogPost" asp-action="AddBlogPost"> Add a Blog </a>
            <a asp-controller="BlogPost" asp-action="AllBlogPost">BlogPosts</a>
        </div>
        <div class="navbar-right">
            <a asp-controller="Account" asp-action="AddPicture"> Add Picture to your profile </a>
            <a asp-controller="Account" asp-action="Login">Login</a>
            <a asp-controller="Account" asp-action="Register">Register</a>
            <a asp-controller="Account" asp-action="EditAccount" method="post">
                <input type="hidden" asp-route-id="@User.Identity.Name" />
                <img src="~/images/.png" alt="Profile Icon" class="profile-image">
            </a>
        </div>
    </div>
</nav>
<h3>Drafts</h3>
@{
    if (Model.Count() < 1)
    {
        <p>No Blogs yet.</p>
    }
    else
    {
        <table border="1">
            <tr>
                <th>Date Drafted</th>
                <th>Blog name</th>
                <th>Blog Description</th>
                <th>Account Name</th>
                <th>Edit</th>
                <th>Delete</th>


            </tr>
            @{
                foreach (var blogPost in Model)
                {
                    <tr>
                        <td>@blogPost.PostDate</td>
                        <td>@blogPost.BlogName</td>
                        <td>@blogPost.BlogDescription</td>
                        <td>@blogPost.Account.AccountName</td>


                        <td><a asp-action="EditBlogPost" asp-route-id="@blogPost.BlogPostId">Edit</a></td>

                        <td><a asp-action="DeleteBlogPost" asp-route-id="@blogPost.BlogPostId">Delete</a></td>

                    </tr>
                }
            }

        </table>
    }
}