@model IEnumerable<IllinoisProject.Models.BlogPost>


<link rel="stylesheet" href="~/css/site.css" />

<!-- Add the profile icon code here -->
<nav class="navbar">
    <div class="navbar-links">
        <div class="navbar-left">
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="BlogPost" asp-action="MyBlogPost">My Posts</a>
                <a asp-controller="BlogPost" asp-action="AddBlogPost"> Add a Blog </a>
                <a asp-controller="BlogPost" asp-action="AllDraft"> Drafts </a>
            }
            else
            {
            }
        </div>
        <div class="navbar-right">
            <div class="navbar-right">
            <!-- Only shows account stuff if the user is logged in-->
            @if (User.Identity.IsAuthenticated)
            {
                    <a asp-controller="Account" asp-action="AllAccount">View All Accounts</a>
                    <a asp-controller="Account" asp-action="MyAccount">MyAccount</a>
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit">Logout</button>
                    </form>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login">Login</a>
                <a asp-controller="Account" asp-action="Register">Register</a>
            }
            </div>
        </div>
    </div>
</nav>

<input type="text" id="searchInput" onkeyup="searchFunction()" placeholder="Search for blogs">
<br />

<h3>Published Blogs</h3>
    <script>
        function searchFunction() {
            var input, filter, rows, i, txtValue;
            input = document.getElementById("searchInput");
            filter = input.value.trim().toUpperCase();
            rows = document.querySelectorAll("#dataBody tr");

            for (i = 0; i < rows.length; i++) {
                var row = rows[i];
                var cells = row.getElementsByTagName("td")[1]; // Index 1 corresponds to the "Blog name" column
                txtValue = cells.textContent || cells.innerText;

                if (txtValue.trim().toUpperCase().indexOf(filter) > -1) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            }
        }
    </script>


<div class="blog-posts-container">
    @if (Model.Any())
    {
        foreach (var blogPost in Model)
        {
            <div class="blog-post-card">
                <h4>@blogPost.BlogName</h4>
                <p class="post-date">Posted on: @blogPost.PostDate.ToShortDateString() by @blogPost.AccountBlogPosts. Account.Name</p>
                <p class="blog-description">@blogPost.BlogDescription</p>
                <div class="blog-post-actions">
                    <span>Comments: @blogPost.Comments.Count</span>
                    <a asp-action="ViewBlogPost" asp-route-id="@blogPost.Id">View Post</a>
                </div>
            </div>
        }
    }
    else
    {
        <p>No Blogs yet.</p>
    }
</div>

