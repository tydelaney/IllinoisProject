@model IEnumerable<IllinoisProject.Models.BlogPost>

@{
    ViewData["Title"] = "Blog Posts";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="actions mb-3">
    <a asp-controller="BlogPost" asp-action="AddBlogPost" class="btn btn-primary">Add a Blog</a>
    <a asp-controller="BlogPost" asp-action="AllDraft" class="btn btn-secondary ml-2">Drafts</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No Blogs yet.</div>
}
else
{
    <div class="table-responsive mb-4">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Date Posted</th>
                    <th>Blog Name</th>
                    <th>Description</th>
                    <th>Account</th>
                    <th>Actions</th>
                    <th>Comments</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model)
                {
                    <tr>
                        <td>@post.PostDate.ToString("yyyy-MM-dd")</td>
                        <td>@post.BlogName</td>
                        <td>@post.BlogDescription</td>
                        <td>@post.Account.AccountName</td>
                        <td>
                            <a asp-action="EditBlogPost" asp-route-id="@post.BlogPostId" class="btn btn-sm btn-info">Edit</a>
                            <a asp-action="DeleteBlogPost" asp-route-id="@post.BlogPostId" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                        <td class="p-0">
                            <div class="bg-light p-3">
                                <h5 class="mb-3">Comments:</h5>
                                @if (post.Comments.Any())
                                {
                                    @foreach (var comment in post.Comments)
                                    {
                                        if (comment.account != null)
                                        {
                                            <div class="comment-card">
                                                <div class="comment-header">@comment.account.UserName:</div>
                                                <div class="comment-body">@comment.CommentDescription</div>
                                                <div class="comment-footer">
                                                    Posted on @comment.dateTime
                                                    </div>
                                                    @if (User.Identity.Name == comment.account.AccountEmail || User.IsInRole("Admin"))
                                                    {
                                                        <a asp-action="EditComment" asp-route-id="@comment.CommentId" class="btn btn-outline-secondary btn-sm">Edit</a>
                                                        <form asp-action="DeleteComment" method="post" class="d-inline" onsubmit="return confirm('Are you sure?');">
                                                            <input type="hidden" name="id" value="@comment.CommentId" />
                                                            <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                                                        </form>

                                                        // Hidden form for editing
                                                        <div id="edit-comment-form-@comment.CommentId" style="display: none;">
                                                            <input type="hidden" value="@comment.CommentId" class="edit-comment-id" />
                                                            <textarea class="form-control edit-comment-text">@comment.CommentDescription</textarea>
                                                            <button type="button" class="btn btn-primary save-edit-comment">Save</button>
                                                            <button type="button" class="btn btn-secondary cancel-edit-comment">Cancel</button>
                                                        </div>
                                                    }
                                                </div>
                                        }
                                    }
                                }
                                else
                                {
                                    <div>No comments yet.</div>
                                }
                                <form asp-controller="BlogPost" asp-action="AddComment" method="post" class="mt-3">
                                    <input type="hidden" name="BlogPostId" value="@post.BlogPostId" />
                                    <div class="form-group">
                                        <label for="comment" class="mb-1">Add Comment:</label>
                                        <textarea class="form-control" name="CommentDescription" rows="2"></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-sm">Add Comment</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<style>
    /* Apply styles to the table, th and td elements for consistent bordering */
    .table, .table th, .table td {
        border: 1px solid #dee2e6; /* Assuming you want a light grey border as is standard */
        border-collapse: collapse; /* Ensures borders collapse into a single border */
    }

    /* For zebra striping and hover effect */
    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, .05);
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 0, 0, .075);
    }

    /* The styles you have already applied to other elements */
    .table td, .table th {
        vertical-align: middle;
    }

    .media-body {
        font-size: 0.9rem;
    }

    .alert {
        font-size: 0.9rem;
    }

    .actions a {
        margin-right: 0.5rem;
    }
    /* Button styling */
    .btn-custom {
        padding: 0.375rem 0.75rem;
        border-radius: 0.25rem;
        color: #fff;
        text-shadow: none; /* Removes any text shadow */
        box-shadow: none; /* Removes any box shadow */
        transition: background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    .btn-edit {
        background-color: #4CAF50; /* A nice shade of green */
    }

    .btn-delete {
        background-color: #F44336; /* A nice shade of red */
    }

    /* Hover effects for buttons */
    .btn-edit:hover {
        background-color: #449d44; /* Darken color on hover */
    }

    .btn-delete:hover {
        background-color: #d32f2f; /* Darken color on hover */
    }

    /* Use FontAwesome icons for Edit and Delete if available */
    .btn i.fa {
        margin-right: 0.5rem; /* Space between icon and text */
    }

    /* Card styling for comments */
    .comment-card {
        background: #f8f9fa;
        border: 1px solid #e1e4e8;
        border-radius: 0.25rem;
        padding: 0.75rem;
        margin-bottom: 0.75rem; /* Space between comments */
    }

    .comment-header {
        font-weight: bold;
    }

    .comment-body {
        font-size: 0.9rem;
    }

    .comment-footer {
        text-align: right;
        font-size: 0.8rem;
        color: #6c757d;
    }
</style>
