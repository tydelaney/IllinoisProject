@model IEnumerable<IllinoisProject.Models.BlogPost>

<link rel="stylesheet" href="~/css/site.css" />

<!-- Add the profile icon code here -->
<nav class="navbar">
    <div class="navbar-links">
        <div class="navbar-left">
            <a asp-controller="BlogPost" asp-action="MyBlogPost">My Posts</a>
            <a asp-controller="BlogPost" asp-action="AllDraft"> My Drafts </a>
            <a asp-controller="BlogPost" asp-action="AddBlogPost"> Add a Blog </a>
            <a asp-controller="BlogPost" asp-action="AllBlogPost"> All Blogs </a>
        </div>
        <div class="navbar-right">
            <a asp-controller="Account" asp-action="AllAccount">View All Accounts</a>
            <a asp-controller="Account" asp-action="Login">Login</a>
            <a asp-controller="Account" asp-action="Register">Register</a>
            <a asp-controller="Account" asp-action="MyAccount">MyAccount</a>
        </div>
    </div>
</nav>

<input type="text" id="searchInput" onkeyup="searchFunction()" placeholder="Search for blogs">
<br />

<h3>Published Blogs</h3>

@if (Model.Count() < 1)
{
    <p>No Blogs yet.</p>
}
else
{
    <table border="1">
        <thead>
            <tr>
                <th>Date Posted</th>
                <th>Blog name</th>
                <th>Blog Description</th>
                <th>Account Name</th>
            </tr>
        </thead>
        <tbody id="dataBody">
            @foreach (var blogPost in Model)
            {
                <tr>
                    <td>@blogPost.PostDate</td>
                    <td>@blogPost.BlogName</td>
                    <td>@blogPost.BlogDescription</td>
                    <td>@blogPost.Account.Name</td>
                </tr>
            }
        </tbody>
    </table>

    <script>
        function searchFunction() {
            var input, filter, rows, i, txtValue;
            input = document.getElementById("searchInput");
            filter = input.value.trim().toUpperCase();
            rows = document.querySelectorAll("#dataBody tr");

            for (i = 0; i < rows.length; i++) {
                var row = rows[i];
                var cells = row.getElementsByTagName("td")[1]; // Index 1 corresponds to the "Blog name" column
                txtValue = cells.textContent || cells.innerText;

                if (txtValue.trim().toUpperCase().indexOf(filter) > -1) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            }
        }
    </script>
}
