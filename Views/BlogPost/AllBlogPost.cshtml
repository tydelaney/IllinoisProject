@model IEnumerable<IllinoisProject.Models.BlogPost>
<link rel="stylesheet" href="~/css/site.css" />

<!-- Add the profile icon code here -->
<nav class="navbar">
    <div class="navbar-links">
        <div class="navbar-left">
            <a asp-controller="BlogPost" asp-action="MyBlogPost">My Posts</a>
            <a asp-controller="BlogPost" asp-action="AddBlogPost"> Add a Blog </a>
            <a asp-controller="BlogPost" asp-action="AllDraft"> Drafts </a>
        </div>
        <div class="navbar-right">
            <a asp-controller="Account" asp-action="EditAccount">Edit</a>
            
            <a asp-controller="Account" asp-action="Login">Login</a>
            <a asp-controller="Account" asp-action="Register">Register</a>
            
        </div>
    </div>
</nav>


<h3>Published Blogs</h3>

<div class="blog-posts-container">
    @if (Model.Any())
    {
        foreach (var blogPost in Model)
        {
            <div class="blog-post-card">
                <h4>@blogPost.BlogName</h4>
                <p class="post-date">Posted on: @blogPost.PostDate.ToShortDateString() by @blogPost.Account.Name</p>
                <p class="blog-description">@blogPost.BlogDescription</p>
                <div class="blog-post-actions">
                    <span>Comments: @blogPost.Comments.Count</span>
                    <a asp-action="EditBlogPost" asp-route-id="@blogPost.BlogPostId">Edit</a>
                    <a asp-action="DeleteBlogPost" asp-route-id="@blogPost.BlogPostId">Delete</a>
                    <a asp-action="ViewBlogPost" asp-route-id="@blogPost.BlogPostId">View Post</a>
                </div>
            </div>
        }
    }
    else
    {
        <p>No Blogs yet.</p>
    }
</div>