@model IllinoisProject.ViewModels.AccountBlogPostViewModel
<link rel="stylesheet" href="~/css/site.css" />
<nav class="navbar">
    <div class="navbar-links">
        <div class="navbar-left">
            <a asp-controller="BlogPost" asp-action="AddBlogPost"> Add a Blog </a>
            <a asp-controller="BlogPost" asp-action="AllBlogPost">BlogPosts</a>
            <a asp-controller="BlogPost" asp-action="AllDraft"> Drafts </a>
        </div>
        <div class="navbar-right">
            <a asp-controller="Account" asp-action="AddPicture"> Add Picture to your profile </a>
            <a asp-controller="Account" asp-action="Login">Login</a>
            <a asp-controller="Account" asp-action="Register">Register</a>
            <a asp-controller="Account" asp-action="EditAccount" method="post">
                <input type="hidden" asp-route-id="@User.Identity.Name" />
                <img src="~/images/.png" alt="Profile Icon" class="profile-image">
            </a>
        </div>
    </div>
</nav>


<h3>Delete Blog Post</h3>
<p>Are you sure you want to delete this blog post?</p>

<div>
    <dl class="dl-horizontal">
        <dt>Blog Post ID</dt>
        <dd>@Model.BlogPost.BlogPostId</dd>
        <dt>Blog Name</dt>
        <dd>@Model.BlogPost.BlogName</dd>
        <dt>Blog Description</dt>
        <dd>@Model.BlogPost.BlogDescription</dd>
      
    </dl>
</div>

<form asp-controller="BlogPost" asp-action="DeleteBlogPost" method="post">
    <input type="hidden" asp-for="BlogPost.BlogPostId" />

    <button type="submit">Yes, Delete</button>
</form>

<p>
    <a asp-controller="BlogPost" asp-action="AllBlogPost">No, Back to List</a>
</p>