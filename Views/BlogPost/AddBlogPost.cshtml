<form asp-controller="BlogPost" asp-action="AddBlogPost" method="post">
    <h2>Add a Blog Post</h2>
    <label asp-for="BlogPost.BlogName">Blog Title</label>
    <input asp-for="BlogPost.BlogName" />
    <br />
    <!-- ... Your existing HTML code ... -->
    <label asp-for="BlogPost.BlogDescription">Description</label>
<textarea asp-for="BlogPost.BlogDescription" rows="8" cols="50"></textarea>
    <!-- ... Your existing HTML code ... -->

    <br />
    <!-- <input type="date" asp-for="BlogPost.PostDate" />
    <br /> -->
    <label asp-for="BlogPost.Draft">Draft or Publish</label>
    <label class="radio-label"><input type="radio" asp-for="BlogPost.Draft" value="true" /> Draft</label>
    <label class="radio-label"><input type="radio" asp-for="BlogPost.Draft" value="false" /> Publish</label>
    <br />
    <button type="submit">Add the Blog</button>
</form>

