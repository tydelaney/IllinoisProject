@model IEnumerable<IllinoisProject.Models.AccountBlogPost>
<link rel="stylesheet" href="~/css/site.css" />
 <link rel="stylesheet" href="~/css/AllAccount.css" />
<link rel="stylesheet" href="~/css/NavBar.css" />

<nav class="navbar">
    <div class="navbar-links">
        <div class="navbar-left">
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="BlogPost" asp-action="AddBlogPost"> Add a Blog </a>
                <a asp-controller="BlogPost" asp-action="AllDraft"> Drafts </a>
                <a asp-controller="BlogPost" asp-action="AllBlogPost"> All Blogs </a>
            }
            else
            {
                <a asp-controller="BlogPost" asp-action="AllBlogPost"> All Blogs </a>
            }
        </div>
        <div class="navbar-right">
            <div class="navbar-right">
                <!-- Only shows account stuff if the user is logged in-->
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Account" asp-action="AllAccount">View All Accounts</a>
                    <a asp-controller="Account" asp-action="MyAccount">MyAccount</a>
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit">Logout</button>
                    </form>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login">Login</a>
                    <a asp-controller="Account" asp-action="Register">Register</a>
                }
            </div>
        </div>
    </div>
</nav>


<h3>My Published Blogs</h3>
@{
    if (Model.Count() < 1)
    {
        <p>No Blogs yet.</p>
    }
    else
    {
        <table border="1">
            <tr>
                <th>Date Posted</th>
                <th>Blog name</th>
                <th>Blog Description</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            @{
                foreach (var blogPost in Model)
                {
                    <tr>
                        <td>@blogPost.BlogPost.PostDate</td>
                        <td>@blogPost.BlogPost.BlogName</td>
                        <td>@blogPost.BlogPost.BlogDescription</td>

                        <td><a asp-action="EditBlogPost" asp-route-id="@blogPost.BlogPostId">Edit</a></td>

                        <td><a asp-action="DeleteBlogPost" asp-route-id="@blogPost.BlogPostId">Delete</a></td>
                    </tr>
                }
            }
        </table>
    }
}
