@model IllinoisProject.Models.Account

<form asp-controller="Account" asp-action="AddAccount" method="post">
    <div asp-validation-summary="All"> </div>

    <fieldset>
        <legend><h2>User Registration</h2></legend>
        <label asp-for="AccountName">Your Name</label>
        <input asp-for="AccountName" />
        <br />
        <br />
        <label asp-for="UserName"></label>
        <input asp-for="UserName" />
        <br />
        <br />
        <label asp-for="AccountEmail"></label>
        <input asp-for="AccountEmail" />
        <br />
        <br />
        <label asp-for="Password"></label>
        <input asp-for="Password" />
        <br />
        <br />
        <button type="submit">Add the Account</button>
        <br />
    </fieldset>
</form>