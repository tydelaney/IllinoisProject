@model IllinoisProject.ViewModels.AccountLoginViewModel
<link rel="stylesheet" href="~/css/Login.css" />
<link rel="stylesheet" href="~/css/NavBar.css" />

<div class="login-container">
    <form asp-action="Login" method="post">
        <fieldset>
            <legend><h2>User Login</h2></legend>
            <div asp-validation-summary="All"></div>
            <input asp-for="Email" placeholder="Email" />
            <span asp-validation-for="Email"></span>
            <br />
            <br />
            <input asp-for="Password" placeholder="Password" />
            <span asp-validation-for="Password"></span>
            <br />
            <div class="form-group">
                <div class="form-check">
                </div>
            </div>
            <br />
            <button type="submit">Log In</button>
        </fieldset>
    </form>
    <p><button><a asp-controller="Account" asp-action="Register">Create an account</a></button></p>
</div>
