@model IllinoisProject.ViewModels.AccountLoginViewModel

<form asp-action="Login" method="post">
	<fieldset>
		<legend><h2>User Login</h2></legend>
	<div asp-validation-summary="All"> </div>

	<label asp-for="Email">	</label>
	<input asp-for="Email" />
	<span asp-validation-for="Email"></span>

	<br />

	<label asp-for="Password">	</label>
	<input asp-for="Password" />
	<span asp-validation-for="Password"></span>


	<br />

	<div class="form-group">
		<div class="form-check">
			<input class="form-check-input" type="checkbox" asp-for="RememberMe" />
			<label class="form-check-label" asp-for="RememberMe">Remember me?</label>
		</div>
	</div>

	</fieldset>
	<button type="submit">Log In</button>

	<p>
		<a asp-controller="Account" asp-action="Register">
			Create an account?
		</a>
	</p>

</form>