@model IEnumerable<IllinoisProject.ViewModels.AuthorViewModel>
@{
    if (Model.Count() < 1)
    {
        <p>No Blogs yet.</p>
    }
    else
    {
        <table border="1">
            <tr>
                <th>Date Posted</th>
                <th>Blog name</th>
                <th>Blog Description</th>
                <th>Account Name</th>
                <th>Edit</th>
                <th>Delete</th>


            </tr>
            @{
                foreach (var blogPost in Model)
                {
                    <tr>
                        <td>@blogPost.BlogPost.PostDate</td>
                        <td>@blogPost.BlogPost.BlogName</td>
                        <td>@blogPost.BlogPost.Account.AccountName</td>
                        <td>@blogPost.Account.AccountName</td>
                    </tr>
                }
            }

        </table>
    }
}